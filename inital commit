<script>
const bgm1 = document.getElementById("bgm1");
const bgm2 = document.getElementById("bgm2");
const bgm3 = document.getElementById("bgm3");

window.addEventListener("click", function startOnce(){
  bgm1.play().catch(()=>{});
  window.removeEventListener("click", startOnce);
});

function switchCard(hideId, showId){
  document.getElementById(hideId).classList.add("hidden");
  const el = document.getElementById(showId);
  el.classList.remove("hidden");
  el.style.animation = "none";
  void el.offsetWidth;
  el.style.animation = "enter 1s ease";
}

function next(a,b){
  switchCard(a,b);
  symbols();
}

function openRose(n){
  switchCard("s3","r"+n);
  symbols();
}

function finalMessage(){
  document.querySelectorAll(".card").forEach(c=>c.classList.add("hidden"));
  const f = document.getElementById("final");
  f.classList.remove("hidden");
  f.style.animation = "enter 1s ease";
  bgm1.pause();
  bgm2.play().catch(()=>{});
  symbols();
}

function showSorry(){
  document.getElementById("final").classList.add("hidden");
  const s = document.getElementById("sorry");
  s.classList.add("show");
  bgm2.pause();
  bgm3.play().catch(()=>{});
  symbols();
  petals();
}

function symbols(){
  document.querySelectorAll(".symbol").forEach(e=>e.remove());
  const set = ["ü¶ã","‚ù§Ô∏è","üíñ","üíï","üå∏","‚ú®"];
  for(let i=0;i<32;i++){
    let s = document.createElement("div");
    s.className = "symbol";
    s.innerText = set[Math.floor(Math.random()*set.length)];
    s.style.left = Math.random()*100 + "vw";
    s.style.animationDuration = 7 + Math.random()*6 + "s";
    s.style.animationDelay = Math.random()*3 + "s";
    document.body.appendChild(s);
  }
}

/* falling petals for sorry screen */
function petals(){
  document.querySelectorAll(".petal").forEach(p=>p.remove());
  for(let i=0;i<18;i++){
    const p = document.createElement("div");
    p.className = "petal";
    p.style.left = Math.random()*100 + "vw";
    p.style.animationDuration = 8 + Math.random()*6 + "s";
    p.style.animationDelay = Math.random()*4 + "s";
    p.style.opacity = .7 + Math.random()*.3;
    document.body.appendChild(p);
  }
}

symbols();
</script>

